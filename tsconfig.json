{
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
